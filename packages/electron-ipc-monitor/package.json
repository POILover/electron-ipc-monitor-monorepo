{
  "name": "electron-ipc-monitor",
  "version": "1.0.0",
  "description": "Electron IPC monitoring tool with Vue.js UI",
  "main": "dist_main/index.js",
  "types": "dist_main/index.d.ts",
  "files": [
    "dist",
    "ui/dist"
  ],
  "scripts": {
    "build:npm": "rimraf dist_npm && rimraf dist_main && pnpm build:main && pnpm babel:main && pnpm build:ui:npm && pnpm plop",
    "build:ui:npm": "cd ui && pnpm build:npm",
    "build:main": "tsc --outDir dist_main",
    "build:main:watch": "tsc --outDir dist_main --watch",
    "dev": "concurrently \"pnpm build:main:watch\" \"pnpm dev:ui\"",
    "dev:ui": "cd ui && pnpm dev",
    "build:ui": "cd ui && pnpm build",
    "babel:cjs": "babel dist_main --out-dir dist_npm/dist/cjs --env-name cjs",
    "babel:esm": "babel dist_main --out-dir dist_npm/dist/esm --env-name esm",
    "babel:main": "pnpm babel:cjs && pnpm babel:esm",
    "plop": "plop"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/node": "^22.17.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "plop": "^4.0.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vue-tsc": "^3.0.5"
  },
  "peerDependencies": {
    "electron": ">=13.0.0"
  }
}
